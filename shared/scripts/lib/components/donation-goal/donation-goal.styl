input[type=text]
  padding 10px
  font-size 24px
  font-weight bold
  transition background linear .1s
  background rgba(255, 249, 184, 0.65)
  color #5F5F5F
  border: 2px solid #E0E0E0;
  border-radius: 5px;
  box-shadow: 4px 1px rgba(224, 224, 224, 0.25);
  box-sizing border-box
  width 100%

  &:focus
    outline none
